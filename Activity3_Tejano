<body>

<div class="container">
    <h1>JavaScript Practice</h1>
    
    <div class="feature-box">
        <h2>Alert Button</h2>
        <p>Click this button to see a friendly message</p>
        <button onclick="sayHello()">Say Hello</button>
    </div>
    
    <div class="feature-box">
        <h2>Text Display</h2>
        <p>Type something and see it appear below</p>
        <input type="text" id="userInput" placeholder="Enter your text here">
        <br>
        <button onclick="showInput()">Show Text</button>
        <div class="instructions">
            <strong>Output Display:</strong>
            <p id="output">Your text will appear here</p>
        </div>
    </div>
    
    <div class="feature-box">
        <h2>Hover Effect</h2>
        <p>Move your mouse over the text below for a color change effect</p>
        <p id="hoverText">Hover over me!</p>
    </div>
    
    <footer>
        JavaScript Practice Page
    </footer>
</div>

<script>
    function sayHello() {
        alert("Hello, everyone!.");
    }

    function showInput() {
        let text = document.getElementById("userInput").value;
        let outputElement = document.getElementById("output");
        
        if (text.trim() === "") {
            outputElement.innerHTML = "Please type something in the text box above";
            outputElement.style.color = "#ff69b4";
            outputElement.style.fontStyle = "italic";
        } else {
            outputElement.innerHTML = "<strong>" + text;
            outputElement.style.color = "#ff1493";
            outputElement.style.fontStyle = "normal";
            
            // Clear input after showing
            document.getElementById("userInput").value = "";
        }
    }

    let hoverText = document.getElementById("hoverText");
    let originalText = hoverText.innerHTML;
    let originalColor = hoverText.style.color;
    let originalBackground = hoverText.style.background;
    
    hoverText.onmouseover = function() {
        this.style.color = "white";
        this.style.background = "linear-gradient(45deg, #ff69b4, #ff1493)";
        this.innerHTML = "Hover Over Me!";
    };
    
    hoverText.onmouseout = function() {
        this.style.color = originalColor;
        this.style.background = originalBackground;
        this.innerHTML = originalText;
    };
</script>

